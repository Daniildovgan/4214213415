#include <iostream>
#include <vector>

void addColumnToPosition(std::vector<std::vector<int>>& arr, int position, int value) {
    for (int i = 0; i < arr.size(); ++i) {
        arr[i].insert(arr[i].begin() + position, value);
    }
}

int main() {
    std::vector<std::vector<int>> array2D = {{1, 2, 3}, {4, 5, 6}, {7, 8, 9}};
    int position = 1;
    int newValue = 10;

    addColumnToPosition(array2D, position, newValue);

    for (const auto& row : array2D) {
        for (int num : row) {
            std::cout << num << " ";
        }
        std::cout << std::endl;
    }

    return 0;
}
